<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainController">
   <top>
      <Pane prefHeight="50.0" prefWidth="400.0" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="14.0" layoutY="15.0" text="채팅 클라이언트" />
         </children>
      </Pane>
   </top>
   <center>
      <Pane prefHeight="400.0" prefWidth="400.0" BorderPane.alignment="CENTER">
         <children>
            <TextArea fx:id="taChatList" prefHeight="400.0" prefWidth="400.0" />
         </children>
      </Pane>
   </center>
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="tfChat" prefHeight="30.0" prefWidth="301.0" />
            <Button mnemonicParsing="false" onAction="#sendMessage" prefHeight="29.0" prefWidth="99.0" text="전송" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
